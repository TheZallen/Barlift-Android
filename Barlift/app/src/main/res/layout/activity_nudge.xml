<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkerblue"
    tools:context="com.barliftapp.barlift.NudgeActivity">

    <RelativeLayout
        android:id="@+id/rl_nudgeFriend"
        android:layout_width="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <TextView android:text="Nudge a friend"
            android:id="@+id/tv_nudge"
            android:layout_width="wrap_content"
            android:textColor="#FFF"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="27dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:id="@+id/hr_friend"
        android:layout_below="@+id/rl_nudgeFriend"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#262f3a"
        android:layout_width="fill_parent"/>

    <RelativeLayout
        android:id="@+id/rl_cont"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/hr_friend"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_what"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="10dp"
            android:onClick="onWhatClick">

            <TextView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:id="@+id/tv_ques"
                android:text="\?"
                android:gravity="center"
                android:background="@drawable/nudge_ques"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_ques"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="What's a nudge?"
                android:textColor="#FFF"
                android:id="@+id/textView5" />
        </RelativeLayout>

        <View
            android:id="@+id/hr_what"
            android:layout_toRightOf="@+id/rl_what"
            android:layout_height="50dp"
            android:background="#262f3a"
            android:layout_width="2dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_marginLeft="-2dp"

            android:layout_toRightOf="@+id/hr_what">

            <TextView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:id="@+id/tv_count"
                android:text="5"
                android:gravity="center"
                android:background="@drawable/nudge_count"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="Remaining"
                android:layout_toRightOf="@+id/tv_count"
                android:textColor="#FFF"
                android:id="@+id/textView6" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/hr_below"
        android:layout_below="@+id/rl_cont"
        android:layout_height="2dp"
        android:background="#262f3a"
        android:layout_width="fill_parent"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:background="@color/dblue"
        android:layout_below="@+id/hr_below"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
