<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="10dp">

    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/di_bottombar"
        android:layout_marginTop="158dp"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/dblue"
            android:id="@+id/di_barName"
            android:layout_below="@+id/tv_deals_redeemed"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/dblue"
            android:id="@+id/di_community"
            android:layout_below="@+id/di_barName"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/di_peopleicon"
            android:src="@drawable/ic_action_group"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="right"
            android:textColor="@color/dblue"
            android:id="@+id/di_number"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/di_peopleicon"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/di_dealback"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/view_gradient"
        android:layout_alignTop="@+id/view_gradient"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:id="@+id/view_gradient"
        android:background="@drawable/linear_gradient"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="DEAL OF THE DAY"
        android:gravity="center"
        android:padding="2dp"
        android:textColor="@color/white"
        android:id="@+id/orange_bar"
        android:background="@color/orange"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:lines="3"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:id="@+id/di_barDeal"
        android:gravity="center"
        android:layout_below="@+id/orange_bar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="14sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:textColor="@color/green"
        android:id="@+id/di_moredealsbutton"
        android:gravity="center"
        android:layout_below="@+id/di_barDeal"
        android:layout_centerHorizontal="true" />


</RelativeLayout>