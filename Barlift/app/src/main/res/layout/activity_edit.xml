<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.barliftapp.barlift.activity.EditActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar">
    </include>

    <View android:layout_width="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tool_bar"
        android:layout_alignParentBottom="true"
        android:background="@color/dblue"
        android:alpha=".7"
        android:layout_height="fill_parent"
        android:id="@+id/view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:text="Change your 'going-out' profile"
        android:textColor="@color/white"
        android:id="@+id/tv_onboard_sub"
        android:layout_below="@+id/tool_bar"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:background="@drawable/white_btn"
        android:padding="10dp"
        android:id="@+id/btn_profile"
        android:onClick="onEditClick"
        android:layout_below="@+id/tv_onboard_sub"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:text="Change drink/food preferences"
        android:textColor="@color/white"
        android:id="@+id/tv_drink_prefs"
        android:layout_below="@+id/btn_profile"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="DRINK PREFERENCES"
        android:background="@drawable/white_btn"
        android:padding="10dp"
        android:id="@+id/btn_pref"
        android:onClick="onPrefClick"
        android:layout_below="@+id/tv_drink_prefs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:text="Change what days you like to go out"
        android:textColor="@color/white"
        android:id="@+id/tv_day_prefs"
        android:layout_below="@+id/btn_pref"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="GOING OUT DAYS"
        android:background="@drawable/white_btn"
        android:padding="10dp"
        android:id="@+id/btn_grad"
        android:onClick="onGoingClick"
        android:layout_below="@+id/tv_day_prefs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy and Terms"
        android:id="@+id/btn_terms"
        android:padding="10dp"
        android:onClick="onTermsClick"
        android:layout_marginBottom="10dp"
        android:background="@drawable/white_btn"
        android:layout_alignBottom="@+id/view"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
